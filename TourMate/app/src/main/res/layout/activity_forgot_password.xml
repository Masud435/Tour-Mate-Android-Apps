<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:padding="22dp"
        android:onClick="backBtnForPassAct"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_radio_button_unchecked_black_24dp"
        android:padding="10dp"
        android:onClick="backBtnForPassAct"
        android:id="@+id/backBtn"/>

    <TextView
        android:id="@+id/emailLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMAIL"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="260dp"/>

    <EditText
        android:layout_below="@+id/emailLabel"
        android:id="@+id/userEmailFPAETID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:textColorHint="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/email"
        android:hint="Enter registered email"
        android:textColor="@color/white"
        android:backgroundTint="@color/status_bar_color"
        android:textCursorDrawable="@drawable/color_cursor"
        android:drawableTint="@color/white"/>

    <View
        android:id="@+id/emailViewFPA"
        android:layout_below="@+id/userEmailFPAETID"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2.5dp"/>

    <Button
        android:id="@+id/forgotPasswordBtnFPAID"
       android:layout_below="@+id/userEmailFPAETID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset password"
        android:textSize="20sp"
        android:background="@drawable/rounded_button"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:onClick="resetForgotPasswordBtn"/>

</RelativeLayout>